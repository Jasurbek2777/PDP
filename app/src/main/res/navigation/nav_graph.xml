<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/splashFragment">

    <fragment
        android:id="@+id/splashFragment"
        android:name="com.example.pdp.fragments.SplashFragment"
        android:label="fragment_splash"
        tools:layout="@layout/fragment_splash" >
        <action
            android:id="@+id/action_splashFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.pdp.fragments.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_settingFragment"
            app:destination="@id/settingFragment" />
        <action
            android:id="@+id/action_homeFragment_to_allModulsFragment"
            app:destination="@id/allModulsFragment" />
        <action
            android:id="@+id/action_homeFragment_to_oneModulFragment"
            app:destination="@id/oneModulFragment" />
    </fragment>
    <fragment
        android:id="@+id/settingFragment"
        android:name="com.example.pdp.fragments.SettingFragment"
        android:label="fragment_setting"
        tools:layout="@layout/fragment_setting" >
        <action
            android:id="@+id/action_settingFragment_to_addModuleFragment"
            app:destination="@id/addModuleFragment" />
        <action
            android:id="@+id/action_settingFragment_to_editCourseFragment"
            app:destination="@id/editCourseFragment" />
        <action
            android:id="@+id/action_settingFragment_to_addLessonFragment"
            app:destination="@id/addLessonFragment" />
    </fragment>
    <fragment
        android:id="@+id/allModulsFragment"
        android:name="com.example.pdp.fragments.AllModulsFragment"
        android:label="fragment_all_moduls"
        tools:layout="@layout/fragment_all_moduls" />
    <fragment
        android:id="@+id/addModuleFragment"
        android:name="com.example.pdp.fragments.AddModuleFragment"
        android:label="fragment_add_module"
        tools:layout="@layout/fragment_add_module" >
        <action
            android:id="@+id/action_addModuleFragment_to_editModuleFragment"
            app:destination="@id/editModuleFragment" />
    </fragment>
    <fragment
        android:id="@+id/editCourseFragment"
        android:name="com.example.pdp.fragments.EditCourseFragment"
        android:label="fragment_edit_course"
        tools:layout="@layout/fragment_edit_course" />
    <fragment
        android:id="@+id/oneModulFragment"
        android:name="com.example.pdp.fragments.OneModulFragment"
        android:label="fragment_one_modul"
        tools:layout="@layout/fragment_one_modul" >
        <action
            android:id="@+id/action_oneModulFragment_to_oneLessonFragment"
            app:destination="@id/oneLessonFragment" />
    </fragment>
    <fragment
        android:id="@+id/addLessonFragment"
        android:name="com.example.pdp.fragments.AddLessonFragment"
        android:label="fragment_add_lesson"
        tools:layout="@layout/fragment_add_lesson" >
        <action
            android:id="@+id/action_addLessonFragment_to_editLessonFragment"
            app:destination="@id/editLessonFragment" />
    </fragment>
    <fragment
        android:id="@+id/editLessonFragment"
        android:name="com.example.pdp.fragments.EditLessonFragment"
        android:label="fragment_edit_lesson"
        tools:layout="@layout/fragment_edit_lesson" />
    <fragment
        android:id="@+id/oneLessonFragment"
        android:name="com.example.pdp.fragments.OneLessonFragment"
        android:label="fragment_one_lesson"
        tools:layout="@layout/fragment_one_lesson" />
    <fragment
        android:id="@+id/editModuleFragment"
        android:name="com.example.pdp.fragments.EditModuleFragment"
        android:label="fragment_edit_module"
        tools:layout="@layout/fragment_edit_module" />
</navigation>